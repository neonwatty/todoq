{
  "name": "todoq",
  "version": "1.0.0",
  "description": "Hierarchical task management CLI with SQLite backend",
  "main": "dist/index.js",
  "bin": {
    "todoq": "dist/cli/index.js"
  },
  "scripts": {
    "build": "node build.js",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest --run",
    "test:unit": "vitest --config vitest.unit.config.ts --run --reporter=verbose",
    "test:integration": "vitest --config vitest.integration.config.ts --run --reporter=verbose", 
    "test:watch": "vitest --watch",
    "test:unit:watch": "vitest --config vitest.unit.config.ts --watch",
    "test:integration:watch": "vitest --config vitest.integration.config.ts --watch",
    "test:coverage": "vitest --coverage --run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run lint && npm run test",
    "prepare": "npm run build"
  },
  "keywords": ["cli", "task", "management", "sqlite", "hierarchical"],
  "author": "TodoQ CLI",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "better-sqlite3": "^9.2.2",
    "zod": "^3.22.4",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.12",
    "cosmiconfig": "^8.3.6",
    "ora": "^6.3.1",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.1.3",
    "esbuild": "^0.19.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}