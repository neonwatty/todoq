{
  "name": "todoq",
  "version": "0.0.6",
  "description": "Hierarchical task management CLI with SQLite backend",
  "type": "module",
  "main": "dist/cli/index.js",
  "types": "dist/types.d.ts",
  "files": [
    "dist",
    "README.md",
    "SUMMARY.md",
    "LICENSE"
  ],
  "bin": {
    "todoq": "dist/cli/index.js"
  },
  "scripts": {
    "build": "node build.js",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest --run",
    "test:unit": "vitest --config vitest.unit.config.ts --run --reporter=verbose",
    "test:integration": "vitest --config vitest.integration.config.ts --run --reporter=verbose",
    "test:functional": "vitest --config vitest.functional.config.ts --run --reporter=verbose",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:functional",
    "test:watch": "vitest --watch",
    "test:unit:watch": "vitest --config vitest.unit.config.ts --watch",
    "test:integration:watch": "vitest --config vitest.integration.config.ts --watch",
    "test:functional:watch": "vitest --config vitest.functional.config.ts --watch",
    "test:claude": "vitest --config vitest.claude.config.ts --run --reporter=verbose",
    "test:claude:watch": "vitest --config vitest.claude.config.ts --watch",
    "test:coverage": "vitest --coverage --run",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run lint && npm run test",
    "prepare": "npm run build"
  },
  "keywords": [
    "cli",
    "sqlite",
    "todo",
    "tasks",
    "typescript"
  ],
  "author": {
    "name": "Jeremy Watt",
    "email": "neonwatty@gmail.com",
    "url": "https://github.com/neonwatty"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neonwatty/todoq.git"
  },
  "bugs": {
    "url": "https://github.com/neonwatty/todoq/issues"
  },
  "homepage": "https://github.com/neonwatty/todoq#readme",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "cosmiconfig": "^8.3.6",
    "inquirer": "^9.2.12",
    "ora": "^6.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitest/coverage-v8": "^1.6.1",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "execa": "^9.6.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
